{
  "name": "blog",
  "version": "0.0.1",
  "description": "Blog for Node.js Students",
  "main": "index.js",
  "scripts": {
    "dev": "nodemon -e js,ejs --exec babel-node src/index.js",
    "prod": "babel-node src/app.js",
    "css": "tailwindcss -i ./public/styles/main.css -o ./public/styles/output.css",
    "dev:css": "tailwindcss -i ./public/styles/main.css -o ./public/styles/output.css --watch",
    "start": "npm run dev:css | npm run dev",
    "start:prod": "npm run css && npm run prod"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "connect-redis": "^7.1.1",
    "dotenv": "^16.4.5",
    "ejs": "^3.1.10",
    "express": "^4.21.0",
    "express-async-errors": "^3.1.1",
    "express-session": "^1.18.1",
    "ioredis": "^5.4.1",
    "method-override": "^3.0.0",
    "mysql2": "^3.11.3",
    "sequelize": "^6.37.4"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@babel/node": "^7.25.0",
    "@babel/preset-env": "^7.25.4",
    "nodemon": "^3.1.7",
    "tailwindcss": "^3.4.13"
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  }
}
